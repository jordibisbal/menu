{
    "repositories": [
        { "type": "vcs", "url": "https://github.com/jordibisbal/functional-php" },
        { "type": "vcs", "url": "https://github.com/jordibisbal/abstract-data-structures-php" }
    ],
    "require": {
        "php": "~8",
        "php-school/cli-menu": "^4.1",
        "symfony/yaml": "^5.3",
        "jordibisbal/functional-php": "@dev",
        "jordibisbal/abstract-data-structures-php": "@dev"
    },
    "require-dev": {
        "infection/infection": "^0.23.0",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^0.12.88",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "~3.0",
        "friendsofphp/php-cs-fixer": "^2.17",
        "jetbrains/phpstorm-attributes": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Menu\\": [
